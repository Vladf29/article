extends ../layout

block append head
    -var titlePage= 'Write a Post'
    link(rel="stylesheet", href="/styles/editor.css")
    link(rel="stylesheet", href="/styles/uploadImg.css")

block content
    .edit-page
        .edit-page__notif
            .notif.js-notif
                .notif__content
                    .notif__icon
                        i.far.fa-check-circle
                    .notif__msg Save
        .article-wrapper.js-article-wrapper
            .edit-board.js-edit-board
                .edit-board__c
                    .edit-board__content.js-edit-content
            .article.js-article
                h1.js-graf.js-f.js-plain(data-name="mainTitle" data-touch="untouch" data-remove='false')
                .block-img.block-img--main.js-block-main.js-container(data-name="img" data-touch="untouch" data-remove='false')
                    .block-img__delete.js-block-delete
                        i.fas.fa-minus
                    .block-img__placeholder Set main image
    
    include ../parts/uploadImg
          
block append script
    script(src="http://www.jacklmoore.com/js/autosize.min.js")
    script(src="/js/editorPage.js")