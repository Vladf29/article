<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Profile
        include ../../parts/normalize
        link(rel="stylesheet", href="/styles/profile.css")
    body
        .wrapper-page
            include ../../parts/headerPage
            .content-page
                .user-profile

                    .user-profile__info-block
                        .user-profile__content    
                            .user-profile__info-block-content
                                .user-profile__avatar.js-upload-avatar
                                    .user-profile__avatar-c
                                        img(src="https://www.gravatar.com/avatar/eece7547006bb22bca41841eb40cb4b1?d=mm&s=200", alt="")
                                        .user-profile__avatar-upload
                                            i.fas.fa-camera
                                            span Upload
                                .user-profile__form-edit
                                    input.user-profile__form-edit-name(value='Vlad' data-edit-field='username')
                                .user-profile__form-edit
                                    input.user-profile__form-edit-describe(placeholder='Describe yourself in a few words'  data-edit-field='describe')                                                 

                    .user-profile__tab-bar
                        .user-profile__content
                            .user-profile__tabs
                                -var items = ['Profile','Posts','Likes']
                                each item in items
                                    a.user-profile__tab(href='/me/'+item.toLowerCase())=item
                    
                    .user-profile__content
                        .user-profile__c
                            .user-profile__heading
                                span.user-profile__title About Me
                                .user-profile__edit-btn
                                    i.fas.fa-pencil-alt
                                    span Edit
                            .user-profile__block.user-profile__about-block

                        .user-profile__c
                            .user-profile__heading
                                span.user-profile__title Posts by Vlad

                            .user-profile__block.post-block
                                .post-block__content
                                .post-block__write
                                    i(class="fas fa-plus-circle")
                                    span Write a post
                            

            .upload-img
                .upload-img__c
                    .upload-img__sidebar
                        .upload-img__sidebar-items
                            -var items = ['laptop','link']
                            each item in items
                                .upload-img__sidebar-item(data-upload-show=item)
                                    .upload-img__sidebar-item-c
                                        .upload-img__sidebar-item-icon
                                            i(class='fas fa-'+item)
                    .upload-img__content(data-upload-state='hidden')
                        .upload-img__content-heading
                            span My Device
                        .upload-img__content-c
                            .upload-img__drop
                                .upload-img__drop-area
                                    .upload-img__drop-select-labels
                                    input.upload-img__drop-select(type='file' id='userImg')
                    .upload-img__content(data-upload-state='hidden' style='display:none')
                        .upload-img__content-heading
                            span URL
                        .upload-img__content-c                        
                            form.upload-img__url
                                input.upload-img__url-input(type='text' name='userURLImg' placeholder='Enter a URL')

            //- include ../../parts/footer
            include ../../parts/signC
        
        script(src="/js/common.js")