                                    .comment__footer
                                        .comment__like.js-like
                                            i(class="far fa-heart js-icon-heart")
                                            span.comment__count.js-number-heart 2
                                        span.replay.js-replay Repaly
                            .comment__children.js-comment-children


        .big-img-c.js-big-img
            .big-img
                img(src='#')

